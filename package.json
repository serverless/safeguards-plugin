{
  "name": "@serverless/safeguards-plugin",
  "version": "1.0.0",
  "description": "Serverless Framework Plugin for Safeguards",
  "main": "index.js",
  "repository": "https://github.com/serverless/safeguards-plugin",
  "author": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "cover": "nyc npm test",
    "test": "mocha \"!(node_modules)/**/*.test.js\"",
    "test:isolated": "mocha-isolated \"!(node_modules)/**/*.test.js\"",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "lint:updated": "pipe-git-updated --ext=js -- eslint",
    "prettier-check": "prettier -c --ignore-path .eslintignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c --ignore-path .eslintignore",
    "prettify": "prettier --write --ignore-path .eslintignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write --ignore-path .eslintignore"
  },
  "dependencies": {
    "@serverless/platform-sdk": "^2.3.1",
    "chalk": "^4.1.0",
    "fs-extra": "^9.0.1",
    "iso8601-duration": "^1.2.0",
    "jsonata": "^1.8.3",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "semver": "^7.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@serverless/eslint-config": "^2.1.1",
    "@serverless/test": "^4.3.2",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "git-list-updated": "^1.2.1",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2"
  },
  "eslintConfig": {
    "extends": "@serverless/eslint-config/node",
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/scripts/**",
            "**/test/**",
            "prettier.config.js"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "!/.github",
    "/coverage",
    "/node_modules"
  ],
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{css,html,js,json,md,yaml,yml}": [
      "prettier -c"
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.test.js",
      ".github/**",
      "coverage/**",
      "examples/**",
      "integration-testing/**",
      "node_modules/**",
      "prettier.config.js",
      "scripts/**"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ]
  }
}
