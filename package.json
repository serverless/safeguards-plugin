{
  "name": "@serverless/safeguards-plugin",
  "version": "1.2.0",
  "description": "Serverless Framework Plugin for Safeguards",
  "main": "index.js",
  "repository": "https://github.com/serverless/safeguards-plugin",
  "author": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "cover": "nyc npm test",
    "test": "mocha \"!(node_modules)/**/*.test.js\"",
    "test:isolated": "mocha-isolated \"!(node_modules)/**/*.test.js\"",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "lint:updated": "pipe-git-updated --ext=js -- eslint",
    "prepare-release": "standard-version && prettier --write CHANGELOG.md",
    "prettier-check": "prettier -c --ignore-path .eslintignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c --ignore-path .eslintignore",
    "prettify": "prettier --write --ignore-path .eslintignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write --ignore-path .eslintignore"
  },
  "dependencies": {
    "@serverless/platform-client": "^4.3.0",
    "chalk": "^4.1.2",
    "fs-extra": "^9.1.0",
    "iso8601-duration": "^1.3.0",
    "js-yaml": "^3.14.1",
    "jsonata": "^1.8.5",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "semver": "^7.3.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@serverless/eslint-config": "^3.0.2",
    "@serverless/test": "^7.11.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.4",
    "git-list-updated": "^1.2.1",
    "github-release-from-cc-changelog": "^2.2.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "standard-version": "^9.3.2"
  },
  "eslintConfig": {
    "extends": "@serverless/eslint-config/node",
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/scripts/**",
            "**/test/**",
            "prettier.config.js"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "!/.github",
    "/coverage",
    "/node_modules"
  ],
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{css,html,js,json,md,yaml,yml}": [
      "prettier -c"
    ]
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "refactor",
        "section": "Maintenance Improvements"
      }
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.test.js",
      ".github/**",
      "coverage/**",
      "examples/**",
      "integration-testing/**",
      "node_modules/**",
      "prettier.config.js",
      "scripts/**"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ]
  }
}
